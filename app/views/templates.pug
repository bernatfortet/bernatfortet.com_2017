- var imgRoot = './images'

mixin project-item( title, description, secondSubtitle, slug, icon)
  a.project-item(href=slug+".html" class=slug+"-background" data-tilt data-tilt-glare="true" data-tilt-perspective="1000" data-tilt-scale="1.03" data-tilt-speed="2000" data-tilt-max="10" data-tilt-maxglare='0.4')
    .logo( class=(title == '' ? 'logo-image' : '') )
      if icon != false
        .logo-icon
          img.scale(src="images/projects/"+slug+"/logo.png" data-scale="best-fit-down" data-align="center")
      if title != ''
        .title= title
    .cover
      img.scale(src="images/covers/"+slug+".png" width='100%' height='auto'  data-scale="best-fit-down" data-align="center")
    .description= description

mixin project-header( title, description, role, slug)
  header.project-header(class=slug+"-background")
    .logo( class=(title == '' ? 'logo-image' : '') )
      .logo-icon
        img.scale(src="images/projects/"+slug+"/logo.png" data-scale="best-fit-down" data-align="center")
      if title != ''
        .title= title
    .cover
      img.scale(src="images/covers/"+slug+"@2x.png" width='100%' height='auto' data-scale="best-fit-down" data-align="center")
    .description= description
    .role= role


mixin page-meta(title)
  - var dash = title != '' ? ' â€” ' : ''
  - var siteName = dash+'Bernat Fortet Unanue'
  title= title+siteName
  meta( property="og:title" content=title+siteName )
  meta( name="twitter:title" content="Bernat Fortet Unanue" )



mixin image(imageUrl, caption)
  figure.image
    image.image-inner( width='auto' height='auto' src=imgRoot+'/'+imageUrl+'.jpg')

    if caption != 'empty'
      figcaption.photo-caption= caption
